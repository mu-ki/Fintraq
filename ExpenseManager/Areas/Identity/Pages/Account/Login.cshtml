@page
@model LoginModel
@{
    ViewData["Title"] = "Sign in";
}

<section class="auth-wrap">
    <div class="auth-card panel">
        <div class="auth-head">
            <p class="eyebrow mb-1">Welcome Back</p>
            <h1 class="h3 mb-1">Sign in to Fintraq</h1>
            <p class="subtitle">Track income, expenses, and account balances in one place.</p>
        </div>

        <form id="account" method="post" class="auth-form mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-2" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Input.Password" class="form-label"></label>
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
                <div class="form-check m-0">
                    <input asp-for="Input.RememberMe" class="form-check-input" />
                    <label asp-for="Input.RememberMe" class="form-check-label"></label>
                </div>
                <a id="forgot-password" asp-page="./ForgotPassword" class="small">Forgot password?</a>
            </div>

            <button id="login-submit" type="submit" class="btn btn-primary w-100">Sign in</button>

            <div class="demo-login mt-3 p-3 rounded bg-light border" data-demo-email="@LoginModel.DemoEmail" data-demo-password="@LoginModel.DemoPassword">
                <p class="small fw-semibold mb-2 text-secondary">Try without registering</p>
                <p class="small mb-2">Use the demo account to explore the app:</p>
                <p class="small mb-0">
                    <span class="text-muted">Email:</span> <code class="small">@LoginModel.DemoEmail</code><br />
                    <span class="text-muted">Password:</span> <code class="small">@LoginModel.DemoPassword</code>
                </p>
                <button type="button" class="btn btn-outline-primary btn-sm w-100 mt-2" id="demo-login-btn">Login as demo user</button>
            </div>

            <div class="auth-links mt-3 small">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create new account</a>
                <a asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
            </div>
        </form>

        @if (Model.ExternalLogins.Count > 0)
        {
            <div class="auth-divider"><span>or continue with</span></div>
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="d-grid gap-2">
                    @foreach (var provider in Model.ExternalLogins)
                    {
                        <button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name">
                            @provider.DisplayName
                        </button>
                    }
                </div>
            </form>
        }
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            var box = document.querySelector('.demo-login');
            if (!box) return;
            var email = document.querySelector('#Input_Email');
            var password = document.querySelector('#Input_Password');
            function fillAndSubmit() {
                if (email && password) {
                    email.value = box.getAttribute('data-demo-email') || '';
                    password.value = box.getAttribute('data-demo-password') || '';
                    document.getElementById('account')?.submit();
                }
            }
            document.getElementById('demo-login-btn')?.addEventListener('click', fillAndSubmit);
            @if (Request.Query["demo"].ToString() == "1")
            {
                <text>document.addEventListener('DOMContentLoaded', function () { fillAndSubmit(); });</text>
            }
        })();
    </script>
}
