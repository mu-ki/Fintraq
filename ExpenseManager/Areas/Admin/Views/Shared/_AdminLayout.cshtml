<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] is string t && !string.IsNullOrWhiteSpace(t) ? $"{t} | Admin | Fintraq" : "Admin | Fintraq")</title>
    <link rel="icon" type="image/svg+xml" href="~/favicon.svg" />
    <link rel="alternate icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;700;800&family=Space+Grotesk:wght@500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExpenseManager.styles.css" asp-append-version="true" />
    <style>
        .admin-log-pre { max-height: 60vh; overflow: auto; }
        .admin-nav .nav-link.active { color: #f2cc8f !important; }
    </style>
</head>
<body>
    <div class="app-shell">
        <header class="app-header">
            <nav class="navbar navbar-expand-lg app-nav admin-nav">
                <div class="container">
                    <a class="navbar-brand app-brand" asp-area="Admin" asp-controller="Admin" asp-action="Index">Fintraq Admin</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar" aria-controls="adminNavbar" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="adminNavbar">
                        <ul class="navbar-nav app-links me-auto">
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" asp-area="Admin" asp-controller="Admin" asp-action="Index">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminUsers" ? "active" : "")" asp-area="Admin" asp-controller="AdminUsers" asp-action="Index">User management</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminAi" ? "active" : "")" asp-area="Admin" asp-controller="AdminAi" asp-action="Index">AI settings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminLogs" ? "active" : "")" asp-area="Admin" asp-controller="AdminLogs" asp-action="Index">Logs</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">&larr; Back to app</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container app-content">
            <main role="main" class="pb-4">
                @if (TempData["UserMessage"] != null)
                {
                    <div class="alert alert-@(TempData["UserMessageType"] ?? "info") alert-dismissible fade show" role="alert">
                        @TempData["UserMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @RenderBody()
            </main>
        </div>

        <footer class="app-footer">
            <div class="container">
                <div class="app-footer-inner">
                    <span>&copy; 2026 Fintraq</span>
                    <span class="app-footer-sep">|</span>
                    <span>Admin</span>
                    <span class="app-footer-sep">|</span>
                    <a class="app-footer-link" asp-area="" asp-controller="Home" asp-action="Index">Back to app</a>
                </div>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
