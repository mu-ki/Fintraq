@model AdminLogsViewModel
@{
    ViewData["Title"] = "Logs";
}
<section class="page-header">
    <div>
        <p class="eyebrow">Admin</p>
        <h1>Application logs</h1>
        <p class="subtitle mb-0">View logs, set level, wipe buffer.</p>
    </div>
</section>

<div class="panel mb-4">
    <div class="panel-head">
        <span class="eyebrow">Log level</span>
    </div>
    <div>
        <p class="mb-2">Current default level: <strong>@Model.CurrentLogLevel</strong>. Changing the level is saved and will apply after an application restart.</p>
        <form asp-action="SetLevel" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <select name="level" class="form-select form-select-sm d-inline-block w-auto">
                @foreach (var lvl in Model.LogLevels)
                {
                    <option value="@lvl" selected="@(lvl == Model.CurrentLogLevel)">@lvl</option>
                }
            </select>
            <button type="submit" class="btn btn-sm btn-primary ms-2">Set level</button>
        </form>
    </div>
</div>

<div class="panel">
    <div class="panel-head d-flex justify-content-between align-items-center flex-wrap gap-2">
        <span>Recent log entries (last @Model.Tail)</span>
        <div class="d-flex align-items-center gap-2">
            <a asp-action="Index" asp-route-tail="500" class="btn btn-sm btn-outline-secondary">Show 500</a>
            <form asp-action="WipeLogs" method="post" class="d-inline" onsubmit="return confirm('Clear all log entries from the buffer?');">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-sm btn-outline-danger">Wipe logs</button>
            </form>
        </div>
    </div>
    <div>
        @if (Model.LogEntries.Count == 0)
        {
            <p class="p-3 mb-0 text-muted">No log entries in buffer yet. Logging is captured in memory as the app runs.</p>
        }
        else
        {
            <div class="table-responsive admin-log-table-wrap">
                <table class="table table-sm table-hover mb-0 align-top">
                    <thead>
                        <tr>
                            <th class="text-nowrap">Timestamp</th>
                            <th class="text-nowrap">Level</th>
                            <th class="text-nowrap">Category</th>
                            <th>Message</th>
                            <th class="text-nowrap">Exception</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var e in Model.LogEntries)
                        {
                            <tr>
                                <td class="text-nowrap small">@e.Timestamp</td>
                                <td class="text-nowrap">
                                    <span class="badge bg-@(e.Level == "Error" || e.Level == "Critical" ? "danger" : e.Level == "Warning" ? "warning text-dark" : e.Level == "Information" ? "info" : "secondary")">@e.Level</span>
                                </td>
                                <td class="small text-muted">@e.Category</td>
                                <td class="small">@e.Message</td>
                                <td class="small">
                                    @if (!string.IsNullOrEmpty(e.Exception))
                                    {
                                        <span class="text-danger" title="@e.Exception">@(e.Exception.Length > 80 ? e.Exception.Substring(0, 80) + "…" : e.Exception)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
<style>
    .admin-log-table-wrap { max-height: 65vh; overflow: auto; }
    .admin-log-table-wrap table { font-size: 0.875rem; }
    .admin-log-table-wrap td { word-break: break-word; vertical-align: top !important; }
    .admin-log-table-wrap th { position: sticky; top: 0; background: var(--surface, #fff); z-index: 1; box-shadow: 0 1px 0 var(--line, #dee2e6); }
</style>
