@model AdminAiViewModel
@{
    ViewData["Title"] = "AI settings";
}
<section class="page-header">
    <div>
        <p class="eyebrow">Admin</p>
        <h1>AI settings</h1>
        <p class="subtitle mb-0">API key, model, and token usage.</p>
    </div>
</section>

<div class="panel mb-4">
    <p class="eyebrow">Configuration</p>
    <h2 class="h6 mb-3">API key &amp; model</h2>
    <form asp-action="SaveSettings" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label class="form-label">API key (override)</label>
            <input type="password" name="apiKeyOverride" class="form-control" value="@Model.ApiKeyOverride" placeholder="Leave blank to keep current" autocomplete="off" />
            @if (!string.IsNullOrEmpty(Model.ApiKeyFromConfig))
            {
                <div class="form-text">@Model.ApiKeyFromConfig from appsettings</div>
            }
        </div>
        <div class="mb-3">
            <label class="form-label">Model</label>
            <select name="model" class="form-select">
                @foreach (var m in Model.AvailableModels)
                {
                    <option value="@m" selected="@(m == Model.Model)">@m</option>
                }
            </select>
            <div class="form-text">List loaded from Google when an API key is set.</div>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>

<div class="panel mb-4">
    <p class="eyebrow">Usage</p>
    <h2 class="h6 mb-2">Token usage</h2>
    <p class="mb-2">Total calls: <strong>@Model.TotalCalls</strong> &middot; Prompt tokens: <strong>@Model.TotalPromptTokens</strong> &middot; Completion tokens: <strong>@Model.TotalCompletionTokens</strong></p>
    <a asp-action="TokenHistory" class="btn btn-outline-secondary btn-sm">View full history</a>
</div>

<div class="panel">
    <p class="eyebrow">History</p>
    <h2 class="h6 mb-3">Recent token history</h2>
    <div>
        @if (Model.TokenHistory.Count == 0)
        {
            <p class="p-3 mb-0 text-muted">No AI calls recorded yet.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-sm mb-0">
                    <thead>
                        <tr>
                            <th>Time (UTC)</th>
                            <th>User</th>
                            <th>Model</th>
                            <th>Prompt</th>
                            <th>Completion</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var h in Model.TokenHistory)
                        {
                            <tr>
                                <td>@h.CalledAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td><code>@h.UserId.Substring(0, Math.Min(8, h.UserId.Length))â€¦</code></td>
                                <td>@h.Model</td>
                                <td>@h.PromptTokens</td>
                                <td>@h.CompletionTokens</td>
                                <td>@h.TotalTokens</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
