@model AdminAiViewModel
@{
    ViewData["Title"] = "AI settings";
}
<h1 class="mb-4">AI settings</h1>

<div class="card mb-4">
    <div class="card-header">API key &amp; model</div>
    <div class="card-body">
        <form asp-action="SaveSettings" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label class="form-label">API key (override)</label>
                <input type="password" name="apiKeyOverride" class="form-control" value="@Model.ApiKeyOverride" placeholder="Leave blank to keep current" autocomplete="off" />
                @if (!string.IsNullOrEmpty(Model.ApiKeyFromConfig))
                {
                    <div class="form-text">@Model.ApiKeyFromConfig from appsettings</div>
                }
            </div>
            <div class="mb-3">
                <label class="form-label">Model</label>
                <select name="model" class="form-select">
                    @foreach (var m in Model.AvailableModels)
                    {
                        <option value="@m" selected="@(m == Model.Model)">@m</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">Token usage</div>
    <div class="card-body">
        <p class="mb-0">Total calls: <strong>@Model.TotalCalls</strong> &middot; Prompt tokens: <strong>@Model.TotalPromptTokens</strong> &middot; Completion tokens: <strong>@Model.TotalCompletionTokens</strong></p>
        <a asp-action="TokenHistory" class="btn btn-outline-secondary btn-sm mt-2">View full history</a>
    </div>
</div>

<div class="card">
    <div class="card-header">Recent token history</div>
    <div class="card-body p-0">
        @if (Model.TokenHistory.Count == 0)
        {
            <p class="p-3 mb-0 text-muted">No AI calls recorded yet.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-sm mb-0">
                    <thead>
                        <tr>
                            <th>Time (UTC)</th>
                            <th>User</th>
                            <th>Model</th>
                            <th>Prompt</th>
                            <th>Completion</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var h in Model.TokenHistory)
                        {
                            <tr>
                                <td>@h.CalledAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td><code>@h.UserId.Substring(0, Math.Min(8, h.UserId.Length))â€¦</code></td>
                                <td>@h.Model</td>
                                <td>@h.PromptTokens</td>
                                <td>@h.CompletionTokens</td>
                                <td>@h.TotalTokens</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
