@model IReadOnlyList<AdminUserViewModel>
@{
    ViewData["Title"] = "User management";
}
<section class="page-header">
    <div>
        <p class="eyebrow">Admin</p>
        <h1>User management</h1>
        <p class="subtitle mb-0">List users, update passwords, activate or deactivate.</p>
    </div>
</section>
<div class="panel">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
        <thead>
            <tr>
                <th>Email</th>
                <th>User name</th>
                <th>Email confirmed</th>
                <th>Active</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.Email</td>
                    <td>@u.UserName</td>
                    <td>@(u.EmailConfirmed ? "Yes" : "No")</td>
                    <td>@(u.IsActive ? "Yes" : "No")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
        </table>
    </div>
</div>
