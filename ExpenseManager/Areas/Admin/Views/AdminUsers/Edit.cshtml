@model AdminUserViewModel
@{
    ViewData["Title"] = "Edit user";
}
<h1 class="mb-4">Edit user</h1>
<dl class="row">
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">User name</dt>
    <dd class="col-sm-10">@Model.UserName</dd>
    <dt class="col-sm-2">Active</dt>
    <dd class="col-sm-10">@(Model.IsActive ? "Yes" : "No")</dd>
</dl>

<div class="card mb-4">
    <div class="card-header">Set password</div>
    <div class="card-body">
        <form asp-action="SetPassword" asp-route-id="@Model.Id" method="post" class="row g-2">
            @Html.AntiForgeryToken()
            <div class="col-auto">
                <input type="password" name="newPassword" class="form-control" placeholder="New password" required minlength="6" />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Update password</button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">Active status</div>
    <div class="card-body">
        <form asp-action="SetActive" asp-route-id="@Model.Id" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="active" value="@(!Model.IsActive)" />
            @if (Model.IsActive)
            {
                <button type="submit" class="btn btn-warning">Deactivate user</button>
            }
            else
            {
                <button type="submit" class="btn btn-success">Activate user</button>
            }
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to user list</a>
</div>
