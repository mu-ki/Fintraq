<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] is string pageTitle && !string.IsNullOrWhiteSpace(pageTitle) ? $"{pageTitle} | Fintraq" : "Fintraq")</title>
    <link rel="icon" type="image/svg+xml" href="~/favicon.svg" />
    <link rel="alternate icon" type="image/x-icon" href="~/favicon.ico" />
    <script type="importmap"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;700;800&family=Space+Grotesk:wght@500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExpenseManager.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="app-shell">
        <header class="app-header">
            <nav class="navbar navbar-expand-lg app-nav">
                <div class="container">
                    <a class="navbar-brand app-brand" asp-area="" asp-controller="Home" asp-action="Index">Fintraq</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-lg-flex justify-content-between">
                        <ul class="navbar-nav app-links">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Transactions" asp-action="Index">Transactions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="BankAccounts" asp-action="Index">Bank Accounts</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Data" asp-action="Index">Export / Import</a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>

        <div class="container app-content">
            <main role="main" class="pb-4">
                @RenderBody()
            </main>
        </div>

        <footer class="app-footer">
            <div class="container">
                <div class="app-footer-inner">
                    <span>&copy; 2026 Fintraq</span>
                    <span class="app-footer-sep">|</span>
                    <span>Author: Mugunth</span>
                    <span class="app-footer-sep">|</span>
                    <a class="app-footer-link" href="https://mu-ki.github.io" target="_blank" rel="noopener noreferrer">mu-ki.github.io</a>
                    <span class="app-footer-sep">|</span>
                    <a class="app-footer-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </div>
        </footer>
    </div>

    @if (User?.Identity?.IsAuthenticated == true)
    {
        <button id="fintraqChatToggle"
                type="button"
                class="fintraq-chat-toggle"
                aria-controls="fintraqChatWidget"
                aria-expanded="false"
                aria-label="Open AI assistant">
            <span class="fintraq-chat-toggle-icon" aria-hidden="true">
                <svg viewBox="0 0 24 24" focusable="false">
                    <path d="M4 5.5A2.5 2.5 0 0 1 6.5 3h11A2.5 2.5 0 0 1 20 5.5v8A2.5 2.5 0 0 1 17.5 16H9l-4.5 4v-4.25A2.5 2.5 0 0 1 4 13.5v-8Zm4.5 2.25a.75.75 0 0 0 0 1.5h7a.75.75 0 0 0 0-1.5h-7Zm0 3a.75.75 0 0 0 0 1.5h4.5a.75.75 0 0 0 0-1.5H8.5Z"></path>
                </svg>
            </span>
            <span class="fintraq-chat-toggle-text">AI</span>
        </button>

        <section id="fintraqChatWidget" class="fintraq-chat-widget" aria-hidden="true">
            <header class="fintraq-chat-header">
                <div>
                    <p class="fintraq-chat-eyebrow">Fintraq Assistant</p>
                    <h2>Finance AI</h2>
                </div>
                <button id="fintraqChatClose"
                        type="button"
                        class="fintraq-chat-close"
                        aria-label="Close AI assistant">x</button>
            </header>

            <div id="fintraqChatLog" class="fintraq-chat-log" aria-live="polite"></div>

            <div id="fintraqChatSuggestions" class="fintraq-chat-suggestions" aria-label="Suggested questions">
                <button type="button" class="fintraq-chat-chip" data-prompt="Balance this month">Balance</button>
                <button type="button" class="fintraq-chat-chip" data-prompt="Income this month">Income</button>
                <button type="button" class="fintraq-chat-chip" data-prompt="Expenses this month">Expenses</button>
                <button type="button" class="fintraq-chat-chip" data-prompt="Last month balance">Last month</button>
            </div>

            <form id="fintraqChatForm" class="fintraq-chat-form">
                <label class="visually-hidden" for="fintraqChatInput">Message</label>
                <div class="fintraq-chat-compose">
                    <input id="fintraqChatInput"
                           class="form-control"
                           maxlength="4000"
                           placeholder="e.g. balance, income, expenses last month"
                           required />
                    <button id="fintraqChatSend" type="submit" class="btn btn-primary">Send</button>
                </div>
            </form>
        </section>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
