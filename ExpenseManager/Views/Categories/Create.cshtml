@model ExpenseManager.Models.Category
@{
    ViewData["Title"] = "Create Category";
}

<section class="page-header">
    <div>
        <p class="eyebrow">Global Taxonomy</p>
        <h1>Create Category</h1>
        <p class="subtitle">Create a shared category for all users.</p>
    </div>
</section>

<div class="panel">
    <form asp-action="Create" method="post" class="row g-3">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="col-md-4">
            <label asp-for="Type" class="form-label required-label"></label>
            <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<ExpenseManager.Models.CategoryType>()"></select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Name" class="form-label required-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-12 d-flex gap-2">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
